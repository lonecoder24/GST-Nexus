
{
  "name": "gst-nexus-offline",
  "version": "1.0.0",
  "description": "GST Nexus - Offline Notice Manager",
  "main": "dist/electron.js",
  "homepage": "./",
  "author": "GST Nexus Team <support@gstnexus.com>",
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron public/electron.js\"",
    "electron:pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "electron-is-dev": "^3.0.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.2",
    "recharts": "^2.12.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gstnexus.app",
    "productName": "GST Nexus",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "win": {
      "target": "portable",
      "icon": "public/favicon.ico"
    },
    "portable": {
      "artifactName": "${productName}_Portable_${version}.exe",
      "requestExecutionLevel": "user"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
